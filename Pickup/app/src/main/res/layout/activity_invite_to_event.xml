<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/inviteText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:text="Invite your friends below!"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/inviteSelectedFriendsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="Invite Selected Friends" />

          <ListView
        android:id="@+id/friendListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/inviteText"
        android:layout_below="@id/inviteSelectedFriendsButton" />
            
            
		
        
    </LinearLayout>

</ScrollView>